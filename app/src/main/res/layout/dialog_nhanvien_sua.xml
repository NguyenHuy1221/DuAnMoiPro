<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Sửa thông tin Nhân Viên "
            android:textSize="24dp"
            android:gravity="center"/>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Hình ảnh nhân viên"
            />

        <ImageView
            android:id="@+id/iv_hinhNV_sua"
            android:layout_margin="10dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_add"/>

        <TextView
            android:id="@+id/tv_trang_thai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Nhập Tên nhân viên"
            />
        <EditText
            android:id="@+id/txt_tenNV_sua"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:hint="Tên Nhân viên "
            android:background="@drawable/khung_vien"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Nhập địa chỉ"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_diachiNV_sua"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập địa chỉ "
            android:textSize="14dp"
            android:background="@drawable/khung_vien"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Nhập số điện thoại"
            />
        <EditText
            android:id="@+id/txt_sdtNV_sua"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="000-000-000 "
            android:textSize="14dp"
            android:background="@drawable/khung_vien"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Nhập ngày vào làm"
            />
        <EditText
            android:id="@+id/txt_ngayvaolamNV_sua"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="dd/mm/yy "
            android:textSize="14dp"
            android:background="@drawable/khung_vien"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Nhập mã của chức vụ"
            />
        <EditText
            android:id="@+id/txt_chucvuNV_sua"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="1 là admin , 2 là nhân viên "
            android:textSize="14dp"
            android:background="@drawable/khung_vien"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/btn_Thoat_sua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thoát"
                android:layout_margin="10dp"
                android:background="@drawable/custom_bottom_red"
                app:backgroundTint="@null"
                />
            <Button
                android:id="@+id/btn_Luu_sua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lưu"
                android:layout_margin="10dp"
                android:background="@drawable/custom_bottom"
                app:backgroundTint="@null"
                />
        </LinearLayout>


    </LinearLayout>
</ScrollView>